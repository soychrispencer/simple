# Supabase Project Configuration
SUPABASE_PROJECT_ID=your-project-id

SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Solo server (si esta app lo requiere). NO exponer en el cliente.
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# DB URLs (solo scripts; normalmente NO se usan en esta app)
SUPABASE_STAGING_DB_URL=postgresql://postgres:password@aws-1-<region>.pooler.supabase.com:6543/postgres?sslmode=require&prefer_simple_protocol=true
SUPABASE_PROD_DB_URL=postgresql://postgres:password@aws-1-<region>.pooler.supabase.com:6543/postgres?sslmode=require&prefer_simple_protocol=true

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3002
NEXT_PUBLIC_VERTICAL=properties

# MercadoPago (compartido globalmente)
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token

# Cron job secret (genera con: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here
