# ================================================================
# Central env source (LOCAL) for all verticals
# Copy to: .env.local (root, gitignored) and run: npm run env:setup -- --force
# ================================================================

# ---------------- Shared Supabase ----------------
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STAGING_DB_URL=postgresql://postgres:password@aws-1-<region>.pooler.supabase.com:6543/postgres?sslmode=require&prefer_simple_protocol=true
SUPABASE_PROD_DB_URL=postgresql://postgres:password@aws-1-<region>.pooler.supabase.com:6543/postgres?sslmode=require&prefer_simple_protocol=true

# ---------------- Shared Integrations ----------------
MERCADOPAGO_ACCESS_TOKEN=
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
INSTAGRAM_LOGIN_MODE=legacy
INSTAGRAM_OAUTH_SCOPES=
NEXT_PUBLIC_ENABLE_INSTAGRAM_PUBLISH=true
CRON_SECRET=dev-cron-secret
INSTAGRAM_QUEUE_WORKER_SECRET=dev-cron-secret
HCAPTCHA_SECRET_KEY=
VENTA_ASISTIDA_MAX_PER_HOUR=3
VENTA_ASISTIDA_MAX_PER_DAY=10

# ---------------- Shared Email ----------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
LEADS_NOTIFY_TO=
RESEND_API_KEY=

# ---------------- Shared App Flags ----------------
LOG_LEVEL=info
LOG_TO_FILE=false
METRICS_ENABLED=true
NEXT_PUBLIC_SHOW_DEMO_LISTINGS=always
NEXT_PUBLIC_ENABLE_SIMPLE_API_LISTINGS=false

# ================================================================
# Per-app overrides
# Format: <APPNAME>__<KEY>=<VALUE>
# APPNAME examples: SIMPLEAUTOS, SIMPLEPROPIEDADES, SIMPLETIENDAS, SIMPLEFOOD, SIMPLEADMIN
# ================================================================

