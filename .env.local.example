SIMPLEAUTOS__NEXT_PUBLIC_CRM_DOMAIN=http://localhost:3000
SIMPLEAUTOS__SESSION_COOKIE_NAME=sa_session
SIMPLEAUTOS__SESSION_COOKIE_DOMAIN=localhost
SIMPLEAUTOS__SESSION_COOKIE_SAMESITE=lax
SIMPLEAUTOS__SESSION_COOKIE_SECURE=false
SIMPLEAUTOS__SESSION_TTL_DAYS=30
SIMPLEAUTOS__NEXT_PUBLIC_ENABLE_SIMPLE_API_LISTINGS=false
SIMPLEAUTOS__NEXT_PUBLIC_SIMPLE_API_BASE_URL=http://localhost:4000

