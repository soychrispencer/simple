# =====================================================================
# SIMPLE - ENV TEMPLATE FOR COOLIFY
# =====================================================================
# This file is organized by service. Copy ONLY one block per service
# into Coolify Environment Variables.
#
# Services:
# 1) simple-api
# 2) simpleautos
# 3) simplepropiedades
# =====================================================================

# =====================================================================
# [SERVICE] simple-api (production)
# =====================================================================
NODE_ENV=production
API_HOST=0.0.0.0
API_PORT=4000
LISTINGS_REPOSITORY=postgres
DATABASE_URL=postgresql://simple_user:TU_PASSWORD@postgres:5432/simple_db
CORS_ORIGIN=https://www.simpleautos.app,https://www.simplepropiedades.app,https://admin.simpleplataforma.app
SSO_SHARED_SECRET=TU_SECRET_LARGO
SSO_ISSUER=simple-api
CRON_SECRET=TU_SECRET_LARGO
INSTAGRAM_QUEUE_WORKER_SECRET=TU_SECRET_LARGO
LOG_LEVEL=info
LOG_TO_FILE=false
METRICS_ENABLED=true

# =====================================================================
# [SERVICE] simpleautos (production)
# =====================================================================
NODE_ENV=production
DATABASE_URL=postgresql://simple_user:TU_PASSWORD@postgres:5432/simple_db

NEXT_PUBLIC_VERTICAL=autos
NEXT_PUBLIC_SITE_URL=https://www.simpleautos.app
NEXT_PUBLIC_APP_URL=https://www.simpleautos.app
PUBLIC_APP_URL=https://www.simpleautos.app

NEXT_PUBLIC_AUTOS_DOMAIN=https://www.simpleautos.app
NEXT_PUBLIC_PROPIEDADES_DOMAIN=https://www.simplepropiedades.app
NEXT_PUBLIC_CRM_DOMAIN=https://admin.simpleplataforma.app

NEXT_PUBLIC_SIMPLE_API_BASE_URL=https://api.simpleplataforma.app
SIMPLE_API_BASE_URL=https://api.simpleplataforma.app
NEXT_PUBLIC_STORAGE_PUBLIC_URL=https://www.simpleautos.app

NEXT_PUBLIC_ENABLE_SIMPLE_API_LISTINGS=true
NEXT_PUBLIC_ENABLE_SIMPLE_API_WRITES=true
NEXT_PUBLIC_SIMPLE_API_STRICT_WRITES=false
NEXT_PUBLIC_SHOW_DEMO_LISTINGS=false
NEXT_PUBLIC_ENABLE_INSTAGRAM_PUBLISH=true
NEXT_PUBLIC_DEBUG_LOGS=0

AUTH_SESSION_SECRET=TU_SECRET_LARGO
SESSION_COOKIE_NAME=sa_session
SESSION_COOKIE_DOMAIN=.simpleautos.app
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_SECURE=true
SESSION_TTL_DAYS=30

CRON_SECRET=TU_SECRET_LARGO
INSTAGRAM_QUEUE_WORKER_SECRET=TU_SECRET_LARGO

MERCADOPAGO_ACCESS_TOKEN=
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_PAGE_ID=
META_APP_ID=
META_APP_SECRET=
INSTAGRAM_LOGIN_MODE=legacy
INSTAGRAM_OAUTH_SCOPES=
INSTAGRAM_OAUTH_REDIRECT_URI=https://www.simpleautos.app/api/instagram/oauth/callback
INSTAGRAM_OAUTH_AUTH_TYPE=
INSTAGRAM_TOKEN_REFRESH_WINDOW_MS=604800000
INSTAGRAM_TOKEN_REFRESH_BATCH_LIMIT=25
INSTAGRAM_PUBLISH_MAX_ATTEMPTS=5
INSTAGRAM_PUBLISH_RETRY_BASE_MS=60000
INSTAGRAM_PUBLISH_RETRY_MAX_MS=1800000

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
LEADS_NOTIFY_TO=
RESEND_API_KEY=
EMAIL_DEBUG=false

